{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "out",
        "resolveJsonModule": true
    },
    "include": ["lib/**/*"],
    "exclude": ["**/*.spec.ts", "node_modules"]
}
